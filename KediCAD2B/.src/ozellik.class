Public Sub TableView1_DblClick()
    TextBox2.Clear
    TextBox2.Visible = True
    TextBox2.Height = 25
    If TableView1.Row > 2
        If TableView1.Column <> 0
            If Trim$(TableView1[TableView1.Row, TableView1.Column].Text) <> ""
                TableView1.EditWith(TextBox2)
                TextBox2.Text = ""
            End If
        End If
    End If
End
